@inherits LayoutComponentBase

    <style>
        .site-layout-content {
            background: #fff;
            padding: 24px;
            min-height: 280px;
        }

        .logo {
            width: 120px;
            height: 31px;
            background-color: red;
            float: left;
        }

        /*置顶按钮*/
        .ant-back-top-inner {
            height: 40px;
            width: 40px;
            line-height: 40px;
            border-radius: 4px;
            background-color: #1088e9;
            color: #fff;
            text-align: center;
            font-size: 20px;
        }
    </style>

@*布局*@
<Layout Class="layout">
    @*头部*@
    <Affix>
        <Header>
            @*logo*@
            <i><h1 style="color:white">RiderBBS</h1></i>
            @*导航栏*@

            <NavMenu Style="margin-left: 300px;position:relative;top:-70px"></NavMenu>
        </Header>
    </Affix>
    @*内容*@
    <Content Style="padding: 0 50px;margin-top:50px">
        @*网页主体*@
        <div class="site-layout-content">
            @Body
        </div>
        <BackTop Style="margin-bottom:60px">
            <div class="ant-back-top-inner">UP</div>
        </BackTop>
    </Content>
    <Footer Style="text-align: center; ">Ant Design ©2018 Created by Ant UED</Footer>
</Layout>

